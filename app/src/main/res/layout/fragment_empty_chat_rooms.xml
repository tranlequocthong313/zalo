<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurfaceBright">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/first_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vn_woman_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.RoundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/second_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="-8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vn_man_img"
        app:layout_constraintStart_toEndOf="@id/first_img"
        app:layout_constraintTop_toTopOf="@id/first_img"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.RoundedImageView" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/vn_man_img2"
        app:layout_constraintStart_toEndOf="@id/second_img"
        app:layout_constraintTop_toTopOf="@id/second_img"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.RoundedImageView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/send_free_message_to_friend"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_img" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/add_friend_from_contact"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:textAllCaps="true" />

</androidx.constraintlayout.widget.ConstraintLayout>