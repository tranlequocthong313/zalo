<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="146dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="2dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/list_item_story_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/avatar"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.CurvedImageView"
        tools:src="@drawable/zalo_zingmp3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/list_item_story_small_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:background="@drawable/create_story_button_gradient"
        android:contentDescription="@string/avatar"
        android:scaleType="centerInside"
        android:src="@drawable/ic_pen_solid"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.RoundedImageView" />

    <TextView
        android:id="@+id/list_item_story_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginVertical="6dp"
        android:gravity="center_horizontal"
        android:text="@string/create_new_story"
        android:textColor="@color/colorOnPrimary"
        android:textSize="12sp" />
</FrameLayout>