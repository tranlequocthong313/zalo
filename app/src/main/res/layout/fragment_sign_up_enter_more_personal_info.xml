<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurfaceBright"
    android:paddingBottom="10dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragment_signup_enter_more_personal_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:text="@string/add_personal_info"
        android:textColor="@color/colorOnSurfaceVariant"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_signup_enter_more_personal_info_birthday_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        app:endIconDrawable="@drawable/ic_calendar_light"
        app:endIconMode="custom"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_signup_enter_more_personal_info_title"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.CurvedImageView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_signup_enter_more_personal_info_birthday_text_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/birthday"
            android:inputType="text"
            android:paddingVertical="16dp"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textColorHighlight="@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_signup_enter_more_personal_info_gender_text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        app:endIconDrawable="@drawable/ic_arrow_down_light"
        app:endIconMode="custom"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_signup_enter_more_personal_info_birthday_text_input_layout"
        app:shapeAppearanceOverlay="@style/Theme.Zalo.CurvedImageView">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fragment_signup_enter_more_personal_info_gender_text_input_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="@string/gender"
            android:inputType="text"
            android:paddingVertical="16dp"
            android:textColor="@color/colorOnSurfaceVariant"
            android:textColorHighlight="@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_signup_enter_more_personal_info_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:paddingVertical="12dp"
        android:text="@string/next"
        android:textColor="@color/enabled_state_surface_color"
        android:textSize="15sp"
        app:backgroundTint="@color/enabled_state_primary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
