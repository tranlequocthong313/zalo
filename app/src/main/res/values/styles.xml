<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Zalo.TitleTopAppBar" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Zalo.SubtitleTopAppBar" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Zalo.RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.Zalo.CurvedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Theme.Zalo.CurvedButtonView">
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Theme.Zalo.OnlyLeftCurved">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Theme.Zalo.OnlyRightCurved">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

</resources>