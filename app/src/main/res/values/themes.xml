<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zalo" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionOverflowButtonStyle">@style/ThemeActionButtonOverflow</item>
        <item name="actionBarSize">@dimen/top_app_bar_height</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="BottomNavigation" parent="@style/Widget.Material3.BottomNavigationView">

    </style>

    <style name="PopupMenuStyle" parent="android:Widget.Material.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
        <item name="android:dropDownVerticalOffset">22dp</item>
    </style>

    <style name="ThemeOverlayToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="ToolbarPopupMenuOverflow" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="popupMenuBackground">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="ThemeActionButtonOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_light</item>
    </style>

</resources>